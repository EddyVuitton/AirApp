<style>
    .deal-transition-dense {
        padding: 0%;
        transition: 0.4s;
    }

        .deal-transition-dense:hover {
            padding: 1%;
        }
</style>

<div class="d-flex flex-column cursor-pointer">
    <div class="d-flex justify-space-between deal-transition-dense" style="width: 100%; height: 64px; font-size: 15px;">
        <div class="align-self-center" style="width: 35%;">
            <span style="font-weight: bold; font-size: 17px;">@Deal.Capital</span> <span>(@Deal.Country)</span>
        </div>
        <div class="align-self-center" style="width: 15%; font-weight: bold;">
            <span>From </span><span style="font-size: 17px;">@Deal.Currency @(Deal.Price.ToString("#,0"))*</span>
        </div>
        <div class="align-self-center">
            <div class="d-flex align-content-center">
                <MudIcon Icon="@Icons.Material.Filled.CompareArrows" Size="Size.Medium"></MudIcon>
                <span class="align-self-center">@Deal.FlightType</span>
            </div>
        </div>
        <div class="align-self-center">
            <MudIcon Icon="@Icons.Material.Filled.Info" />
        </div>
    </div>
    <MudDivider></MudDivider>
</div>