@page "/"

@if (_loading)
{
    <MudText Typo="Typo.h1">Loading...</MudText>
}
else
{
    <div style="height: 2000px;">
        <div class="d-flex flex-column" style="position: relative;">
            <div>
                <MudImage Src="@_backgroundImagePath" />
            </div>
            <div class="d-flex justify-center">
                <div style="position: absolute; top: 90%; right: 10%; background-color: white;">
                    <div class="d-flex flex-column gap-y-16">
                        <ChooseFlightType />
                        <DestinationsAndDeals />
                    </div>
                </div>
            </div>
        </div>
    </div>
}