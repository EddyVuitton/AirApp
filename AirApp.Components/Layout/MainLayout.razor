@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <div class="d-flex flex-row justify-center">
        <div class="d-flex flex-column" style="width: 1440px;">
            <div class="d-flex justify-center">
                <div class="d-flex justify-space-between" style="width: 100%;">
                    <div class="d-flex justify-start">
                        <div class="d-flex align-content-center">
                            <MudIconButton OnClick="OpenDrawer"
                                           Style="padding: 0%; margin: 0%; border-radius: 0px; width: 60px; height:60px;"
                                           Size="Size.Large"
                                           Icon="@Icons.Material.Filled.Menu"
                                           Color="Color.Inherit" />

                            <div class="align-self-center" style="width: 190px; height: 40px;">
                                <MudImage Width="190" Height="40" Src="@_logoImagePath" />
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-end">
                        <div class="d-flex">
                            <div class="d-flex flex-row justify-space-between">
                                <MudButton Style="text-transform: none; padding: 0px 10px;" Color="Color.Dark">
                                    Poland - EN
                                </MudButton>
                                <MudButton Style="text-transform: none; padding: 0px 10px;" StartIcon="@Icons.Material.Filled.Person"
                                           Color="Color.Dark"
                                           Size="Size.Large"
                                           IconSize="Size.Large">
                                    Login in
                                </MudButton>
                                <MudButton Style="text-transform: none; padding: 0px 10px;" StartIcon="@Icons.Material.Filled.PersonAdd"
                                           Color="Color.Dark"
                                           Size="Size.Large"
                                           IconSize="Size.Large">
                                    Sign up
                                </MudButton>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-start">
                <div class="d-flex justify-space-between">
                    <div class="d-flex justify-start">
                        @foreach (var b in _buttons)
                        {
                            <MudButton OnClick="(() => NavToPage(b.Page))"
                                       Class="@b.Class"
                                       Style="@b.Style"
                                       DisableElevation="@b.DisableElevation"
                                       Color="@b.Color">
                                @b.Name
                            </MudButton>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*<MudDrawer @bind-Open="@_drawerOpen" Elevation="1" Anchor="Anchor.Start" Variant="@DrawerVariant.Temporary">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Zarezerwuj lot</MudNavLink>
            <MudNavLink Href="/check-in" Match="NavLinkMatch.All">Odprawa</MudNavLink>
            <MudNavLink Href="/trip" Match="NavLinkMatch.All">MOJE REZERWACJE</MudNavLink>
            <MudNavLink Href="/information" Match="NavLinkMatch.All">Informacje</MudNavLink>
            <MudNavLink Href="/information/covid-19" Match="NavLinkMatch.All">Covid-19</MudNavLink>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Status lotu</MudNavLink>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Usługi biznesowe</MudNavLink>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Kontakt z nami</MudNavLink>
        </MudNavMenu>
    </MudDrawer>*@
    <MudMainContent Style="padding: 0%; margin: 0%; background-color: #f6f6f7">
        <div class="d-flex justify-center">
            <div style="border: 1px solid;">
                @Body
            </div>
        </div>
    </MudMainContent>
</MudLayout>